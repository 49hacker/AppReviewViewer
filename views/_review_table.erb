<div id="reviews">
  <h3>レビュー</h3>

  <% if reviews %>
    <table class="table table-bordered table-striped" id="reviews">
      <thead>
        <tr>
          <th>stars</th>
          <th>user名</th>
          <th>日付</th>
          <th>レビュー</th>
          <th>Version</th>
        </tr>
      </thead>

      <tbody>
        <% reviews.order(:id).each do |review| %>
          <tr>
            <td><%= review[:star] %></td>
            <td><%= review[:user] %></td>
            <td><%= review[:date] %></td>
            <td><h5><%= review[:title] %></h5><%= review[:body] %></td>
            <td><%= review[:version] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
