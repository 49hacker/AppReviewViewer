<div id="stars">
  <div class="row">
  <h3>レビュー評価</h3>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <td class="span1"><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></td>
        <td class="span1"><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></td>
        <td class="span1"><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></td>
        <td class="span1"><i class="icon-star"></i><i class="icon-star"></i></td>
        <td class="span1"><i class="icon-star"></i></td>
      </tr>
      <tr>
        <td><%= stars[4] %></td>
        <td><%= stars[3] %></td>
        <td><%= stars[2] %></td>
        <td><%= stars[1] %></td>
        <td><%= stars[0] %></td>
      </tr>
    <% total_count = stars[4] + stars[3] + stars[2] + stars[1] + stars[0] %>
      <tr>
        <td><%= (stars[4] * 100) / total_count %>%</td>
        <td><%= (stars[3] * 100) / total_count %>%</td>
        <td><%= (stars[2] * 100) / total_count %>%</td>
        <td><%= (stars[1] * 100) / total_count %>%</td>
        <td><%= (stars[0] * 100) / total_count %>%</td>
      </tr>
    </tbody>
  </table>
  </div>

  <div class="row">
    <h3>評価分布</h3>
    <div class=""><canvas width="800" height="80" id="star_graph"></canvas></div>
    <div class="row offset1">
        <canvas width="10" height="10" style="background:#5BB75B"></canvas>:<i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i>&nbsp;/&nbsp;
        <canvas width="10" height="10" style="background:#0074CC"></canvas>:<i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i>&nbsp;/&nbsp;
        <canvas width="10" height="10" style="background:#49AFCD"></canvas>:<i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i>&nbsp;/&nbsp;
        <canvas width="10" height="10" style="background:#FAA732"></canvas>:<i class="icon-star"></i><i class="icon-star"></i>&nbsp;/&nbsp;
        <canvas width="10" height="10" style="background:#DA4F49"></canvas>:<i class="icon-star"></i>
    </div>
  </div>
</div>
